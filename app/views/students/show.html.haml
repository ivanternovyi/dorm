.student
  .student--photo-container
    .student--photo{ style: @student.avatar_url ? "background-image: url(#{@student.avatar_url})" : '' }
  .student--data-container
    .student--data-info
      .field_name= t('students.show.first_name')
      = @student.first_name
    .student--data-info
      .field_name= t('students.show.last_name')
      = @student.last_name
    .student--data-info
      .field_name= t('students.show.email')
      = @student.email
    .student--data-info
      .field_name= t('students.show.student_id')
      = @student.student_id
    .student--data-info
      .field_name= t('students.show.dorm_number')
      = @student.dorm_number
    - if @student.room.present?
      .student--data-info.-with-link
        .field_name= t('students.show.room')
        = link_to @student.room.name, room_path(@student.room)
    .student--data-info
      = link_to t('students.show.edit'), edit_student_path(@student), class: 'btn btn-primary'

.student-form
  = simple_form_for(post, url: url) do |f|
    = f.error_notification
    = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

    .form-inputs.with-textarea
      = f.input :title, placeholder: t('activerecord.attributes.post.title_placeholder')
    
    .form-inputs.with-textarea
      = f.input :important, as: :boolean

    .form-inputs.with-textarea
      = f.input :body, as: :text,
                       placeholder: t('activerecord.attributes.post.body_placeholder'),
                       class: 'student-textarea'

    .form-actions.text-center
      = f.submit t('common.submit'), class: 'btn btn-primary'
